<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
android:orientation="vertical"
android:layout_weight="1"
    >

    <TextView
        android:fontFamily="sans-serif-medium"
        android:textSize="35sp"
        android:text="Team A"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"/>
    <TextView
        android:padding="20dp"
        android:fontFamily="sans-serif-medium"
        android:textSize="40sp"
        android:id="@+id/score_team_a"
        android:text="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"/>


    <Button
        android:onClick="plusthree"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-medium"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+3points"/>


    <Button
        android:onClick="plustwo"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-medium"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+2points"/>

    <Button
android:onClick="plusone"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-medium"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="free point"/>



</LinearLayout>

    <LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
    android:layout_weight="1"
    >

<TextView
    android:padding="20dp"
    android:fontFamily="sans-serif-medium"
    android:textSize="35sp"
    android:text="Team B"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"/>
<TextView
    android:padding="20dp"
    android:fontFamily="sans-serif-medium"
    android:textSize="40sp"
    android:id="@+id/score_team_b"
    android:text="0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"/>


<Button
    android:onClick="plusthreeB"
    android:layout_marginBottom="20dp"
    android:fontFamily="sans-serif-medium"
    android:textSize="25sp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="+3points"/>


<Button
    android:onClick="plustwoB"
    android:layout_marginBottom="20dp"
    android:fontFamily="sans-serif-medium"
    android:textSize="25sp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="+2points"/>
<Button
    android:onClick="plusoneB"
    android:layout_marginBottom="20dp"
    android:fontFamily="sans-serif-medium"
    android:textSize="25sp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="free point"/>



</LinearLayout>



    </LinearLayout>

    <Button
        android:onClick="resetoption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"/>
</RelativeLayout>
